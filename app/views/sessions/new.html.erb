<div class='col-md-3'>
	<%= form_tag sessions_path do |form| %>
			<%= text_field_tag :email,'', class:'form-control', placeholder: 'Username' %>
			<%= password_field_tag :password, '', class:'form-control', placeholder: 'Password' %>
			<%= submit_tag "Login", class:'btn btn-info btn-block' %>
	<% end %>
  <%= link_to "Login with Twitter", "auth/twitter", class: 'btn btn-default' %>
  <%= link_to "Login with Facebook", "auth/twitter", class: 'btn btn-default' %>
</div>
