<p id="notice"><%= notice %></p>

<h1>Doctors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Speciality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.speciality %></td>
        <td><%= link_to 'Show', [:admin, @hospital, doctor] %></td>
        <td><%= link_to 'Edit', edit_admin_hospital_doctor_path(@hospital, doctor) %></td>
        <td><%= link_to 'Destroy', [:admin, @hospital, doctor], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doctor', new_admin_hospital_doctor_path %> |
<%= link_to 'Back', admin_hospital_path(@hospital) %>
