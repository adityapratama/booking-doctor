<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Doctor Name</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.doctor.name %></td>
        <td><%= booking.start_date %></td>
        <td><%= booking.end_date %></td>
        <td><%= link_to 'Show', booking, class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, class: 'btn btn-default', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path, class: 'btn btn-default' %>
